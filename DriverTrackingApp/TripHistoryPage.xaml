<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DriverTrackingApp.TripHistoryPage"
             Title="Trip History">

    <VerticalStackLayout Padding="20">
        <Label Text="Your Trips" 
               FontSize="24" 
               FontAttributes="Bold"
               Margin="0,0,0,20"/>

        <CollectionView x:Name="TripCollectionView">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="0,5" 
                           Padding="15" 
                           BorderColor="LightGray"
                           CornerRadius="8">
                        <VerticalStackLayout>
                            <Label Text="{Binding StartTime, StringFormat='Start: {0:g}'}" 
                                   FontSize="16" 
                                   FontAttributes="Bold"/>

                            <Label Text="{Binding EndTime, StringFormat='End: {0:g}'}" 
                                   FontSize="14" 
                                   TextColor="Gray"/>

                            <Label Text="{Binding TotalDistance, StringFormat='Distance: {0:F2} km'}" 
                                   FontSize="14"
                                   Margin="0,5,0,0"/>

                            <Label Text="{Binding AvgSpeed, StringFormat='Avg Speed: {0:F1} km/h'}" 
                                   FontSize="14"/>

                            <Label Text="{Binding MaxSpeed, StringFormat='Max Speed: {0:F1} km/h'}" 
                                   FontSize="14"/>

                            <Label Text="{Binding FaultData, StringFormat='Faults: {0}'}" 
                                   FontSize="14"
                                   TextColor="Red"/>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>

</ContentPage>